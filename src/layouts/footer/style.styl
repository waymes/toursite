@import '../../styles/variables.styl'

iconWidth = 35px

.footer
  padding 20px 0
  border-top 1px solid rgba(0,0,0,0.15)
  display grid
  grid-template-columns auto auto auto
  .link
    color colorBlack
    text-decoration none
    font-size fontSizeXS
    &:hover
      text-decoration underline
  &__socials
    display flex
    align-items flex-end
    flex-direction column
    .link
      width iconWidth
      height iconWidth
      text-align center
      line-height iconWidth
      display inline-block
      border 1px solid #ccc
      border-radius 50%
      color rgba(0,0,0,0.3)
      margin-bottom 8px
      transition all 0.2s
      &:hover
        background-color #ccc
        color #fff
  &__contactInfo
    &>div
      margin-bottom 8px
    i
      width iconWidth
      height iconWidth
      line-height iconWidth
      text-align center
      border 1px solid #ccc
      border-radius 50%
      color #ccc
      margin-right 8px
  &__links
    list-style-type none
    margin 0
    text-align center
    padding 0
    width 100%
    

