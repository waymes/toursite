.footer
  background #444
  padding 20px 0
  &__socials, &__contactInfo, &__links
    display flex
    flex-direction column
    justify-content center
  &__socials
    text-align center
    margin-bottom 20px
    @media screen and (min-width: 768px) {
      text-align left
      margin-bottom 0
    }
  &__contactInfo
    align-items center
    margin-bottom 20px
    @media screen and (min-width: 768px) {
      margin-bottom 0
    }
    a
      color #fff
  &__links
    list-style-type none
    margin-bottom 0
    text-align center
    padding-left 0
    width 100%
    @media screen and (min-width 768px) {
      text-align left
      margin-left auto
      width max-content
    }
    a
      color #fff

