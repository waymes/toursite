@import '../../styles/variables.styl'

.tourpage
  padding 0 15px

  p
    font-size fontSizeM
    line-height 1.5
  &__header
    text-align center
    padding 35px 15px 0
    &__title, &__name
      color colorWhite
      text-shadow 1px 1px #555
    &__title
      margin 0
      font-size 24px
      letter-spacing 2px
      @media screen and (min-width smallWidth)
        font-size 28px
      @media screen and (min-width 1400px)
        font-size 34px
    &__dates
      color #adff2f
      text-shadow 1px 1px #555
      font-size 20px
      margin 24px 0
      @media screen and (min-width smallWidth)
        font-size 24px
      @media screen and (min-width 1400px)
        font-size 30px
    &__name
      font-size 50px
      margin 35px 0
      @media screen and (min-width smallWidth)
        font-size 57px
      @media screen and (min-width 1400px)
        font-size 70px
  &__section
    &_1
      .tourpage__firstBlockItems
        display grid 
        grid-template-columns repeat(1, 1fr)
        grid-gap 15px
        grid-auto-rows minmax(100px, auto)
        text-align center
        @media screen and (min-width smallWidth)
          grid-template-columns repeat(2, 1fr)
        @media screen and (min-width largeWidth)
          grid-template-columns repeat(3, 1fr)
    &_2
      .tourpage__secondBlockItems
        display grid 
        grid-template-columns repeat(1, 1fr)
        text-align center
        @media screen and (min-width smallWidth)
          grid-template-columns repeat(2, 1fr)
        @media screen and (min-width largeWidth)
          grid-template-columns repeat(4, 1fr)
        .imageFact 
          position relative
          background-size cover
          background-position center
          &::before
            content: ''
            display block
            padding-top: 100%
          &__details
            position absolute
            left 0
            right 0
            bottom 0
            padding 25px 15px
            height max-content
            text-shadow: 0 0 30px rgba(0,0,0,.9)
            color colorWhite
            font-weight 500
            span
              background-color rgba(255, 255, 255, 0.39)
              box-shadow 1px 1px 20px rgba(255, 255, 255, 0.68)
    &_3
      .tourpage__thirdBlockItems
        display grid
        grid-template-columns repeat(1, 1fr)
        grid-gap 15px
        grid-auto-rows minmax(100px, auto)
        @media screen and (min-width mediumWidth)
          grid-template-columns repeat(2, 1fr)
        .textBlock
          padding-left 50px
          position relative
          &::before
            content ''
            position absolute 
            top 5px
            left 0
            width 30px
            height 15px
            border-left borderBlack 
            border-bottom borderBlack
            transform rotate(-45deg)
          &__details
            margin-top 0
    &_5
      .button
        margin 5vh auto 0
        display block
        width 250px
      .tourpage__description
        max-width largeWidth
        margin 6vh auto 8vh
        text-align: center
    &_6
      .guideInfo
        max-width largeWidth
        margin 0 auto
