@import '../../../../styles/variables.styl'

.atlas
  position relative
  padding 60px 0
  &::before
    content ''
    position absolute 
    top 0
    left 0
    right 0
    bottom 0
    background-image url('/static/atlas_0.jpg')
    background-size 300px 200px
    background-repeat no-repeat
    background-position center
    opacity 0.5
  
  &__facts
    .fact
      position absolute
      width 300px
      height 300px
      background lightblue
      padding 20px 30px
      box-sizing border-box
      border 1px solid blue
      &_0
        top -45px
        left 15%
      &_1
        top 50px
        left 20%
      &_2
        top 35px
        left 47%
      &_3
        top 120px
        left 35%
      &_4
        top -15px
        left 55%
      &_5
        top 165px
        left 17%
      &_6
        top 13px
        left 36%
      &_7
        top 140px
        left 50%
      &_8
        top 64px
        left 22%
      &_9
        top 30px
        left 25%

  &__hovers
    max-width 400px
    margin 0 auto
    padding-top 1px
    padding-left 5px
    position relative
    z-index 50
  &__hoverItem
    display inline-block
    vertical-align top
    width 25%
    padding-top 25%
    border 1px solid colorBlack
    position relative
    box-sizing border-box
    margin-left -1px
    margin-top -1px
    &:last-child
      &:hover
        background-color transparent
      &::before, &::after
        content ''
        position absolute
        height 1px
        border-bottom 1px dashed colorBlack
        width 144%
      &::before
        top 49%
        left -21%
        transform rotate(45deg)
      &::after
        top 49%
        right -22%
        transform rotate(-45deg)
    &:hover
      background-color rgba(0,0,0,0.6)
      span 
        color colorWhite
        
    span 
      position absolute 
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 45px
