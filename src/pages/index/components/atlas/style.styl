@import '../../../../styles/variables.styl'

color1 = #17A768
color2 = #F1601D
color3 = #F1AD1D
color4 = #E7E0D2
color5 = #BBAE93
color6 = #F3E761
color7 = #F0F0F0
color8 = #97C2B9
color9 = #E9ABC7
color10 = #CAA882

.atlas
  position relative
  padding-top 40px
  &::before
    absoluteFitParent()
    content ''
    background-image url('/static/atlas_0.jpg')
    background-size 300px 200px
    background-repeat no-repeat
    background-position center
    opacity 0.5
  
  &__facts
    pointer-events none
    .fact
      position absolute
      width 300px
      height 300px
      background lightblue
      padding 20px 30px
      box-sizing border-box
      &_0
        top -45px
        left 15%
        background-color color1
      &_1
        top 50px
        left 20%
        background-color color2
      &_2
        top 35px
        left 47%
        background-color color3
      &_3
        top 120px
        left 35%
        background-color color4
      &_4
        top -15px
        left 55%
        background-color color5
      &_5
        top 140px
        left 17%
        background-color color6
      &_6
        top 13px
        left 36%
        background-color color7
      &_7
        top 140px
        left 50%
        background-color color8
      &_8
        top 64px
        left 22%
        background-color color9
      &_9
        top 30px
        left 25%
        background-color color10

  &__hovers
    max-width 400px
    margin 0 auto
    padding-top 1px
    padding-left 5px
    position relative
  &__hoverItem
    display inline-block
    vertical-align top
    width 25%
    padding-top 25%
    border 1px solid colorBlack
    position relative
    box-sizing border-box
    margin-left -1px
    margin-top -1px
    cursor default
    &:last-child
      &:hover
        background-color transparent
      &::before, &::after
        content ''
        position absolute
        height 1px
        border-bottom 1px dashed colorBlack
        width 144%
      &::before
        top 49%
        left -21%
        transform rotate(45deg)
      &::after
        top 49%
        right -22%
        transform rotate(-45deg)
    &:hover
      background-color colorDark
      span 
        color colorWhite
        
    span 
      position absolute 
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 45px
