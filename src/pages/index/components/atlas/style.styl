@import '../../../../styles/variables.styl'

.atlas
  position relative
  padding-top 40px
  display flex
  justify-content: center
  
  &__facts
    max-width 400px
    width 100%
    margin-left 0
    @media screen and (min-width mediumWidth)
      margin-left 15px
    .fact
      h3
        margin-top 0
      p
        margin-bottom 0

  &__hovers
    width 400px
    padding-top 1px
    padding-left 5px
    position relative
    user-select none
    display none
    @media screen and (min-width mediumWidth)
      display block
    &::before
      absoluteFitParent()
      content ''
      background-image url('/static/atlas_0.jpg')
      background-size 300px 200px
      background-repeat no-repeat
      background-position center
      opacity 0.5
  &__hoverItem
    display inline-block
    vertical-align top
    width 25%
    padding-top 25%
    border 1px solid colorBlack
    position relative
    box-sizing border-box
    margin-left -1px
    margin-top -1px
    cursor default
    outline: none
    &:last-child
      &:hover
        background-color transparent
      &::before, &::after
        content ''
        position absolute
        height 1px
        border-bottom 1px dashed colorBlack
        width 144%
      &::before
        top 49%
        left -21%
        transform rotate(45deg)
      &::after
        top 49%
        right -22%
        transform rotate(-45deg)
    &:hover
      background-color colorDark
      span 
        color colorWhite
        
    span 
      position absolute 
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 45px
