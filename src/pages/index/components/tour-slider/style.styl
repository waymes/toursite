@import '../../../../styles/variables.styl'

.tour-slider
  width 100%
  padding 0 30px

  .tour-slide
    width 200px
    height 70vh
    max-height 500px
    padding 15px 0
    outline none
    cursor pointer
    &:hover
      .tour-slide__inner
        transform scale(1.03)
        z-index 19
        box-shadow 0 28px 81px -7px rgba(0,0,0, 0.44)
    &__inner
      background-position center 
      background-size cover
      height 100%
      transition all .4s
      position relative
      z-index 18
      
    &__content
      padding 32px 24px
      height 100%
      display flex
      flex-direction column
      justify-content flex-end
      color colorWhite
      box-sizing border-box
      background-image linear-gradient(-180deg, transparent 53%, rgba(0,0,0,0.3) 100%)
    
    &__title
      font-weight bold
      font-size fontSizeS
      margin-bottom 5px
    &__description
      font-size fontSizeXS


  .slick
    &-list
      padding 60px 0 110px
    &-arrow, &-arrow:hover, &-arrow:focus
      left 35px
      z-index 1
      width 40px
      height 40px
      background colorWhite
      border-radius 50%
      box-shadow rgba(0, 0, 0, 0.1) 0px 0.222222em 0.888889em
      z-index 10
      top 48%
      &:before
        width 5px
        height 5px
        display inline-block
        border-left 2px solid blue
        border-bottom 2px solid blue
        content ''
        transform rotate(45deg)
        transform-origin center
    &-next, &-next:hover, &-next:focus
      left unset
      right 35px
      &:before
        transform rotate(-135deg)
